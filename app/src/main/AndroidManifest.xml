<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zoltantudlik.testing_stars">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="hu.elte.inf.zoltantudlik.testingStars.TestingStarsApplication"
        android:icon="@drawable/social_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/social_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="hu.elte.inf.zoltantudlik.testingStars.MainActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </activity>

    </application>
</manifest>
